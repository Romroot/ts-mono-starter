{
  "name": "ts-mono-starter",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "version": "1.0.0",
  "repository": "https://github.com/Romroot/ts-mono-starter.git",
  "author": "Raman Ramanouski",
  "license": "MIT",
  "keywords": [
    "typescript",
    "starter",
    "monorepo",
    "turborepo",
    "storybook",
    "jest"
  ],
  "scripts": {
    "tsc": "tsc",
    "test": "jest",
    "update:snapshots": "jest -u",
    "lint": "eslint --ext .tsx,.ts packages/",
