{
  "compilerOptions": {
    "types": ["node", "jest"],
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "target": "ES2016",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": ".",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "declaration": true,
    "paths": {
      "@monoprefix/*": ["packages/*/src"],
      "*": ["node_modules", "packages"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "include": ["packages"],
  "exclude": ["node_modules", "dist"]
}
