{
  "compilerOptions": {
    "types": ["node", "jest"],
    "noEmit": true,
    "strict": true,
    "target": "ES2016",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": ".",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@monoprefix/*": ["packages/*/src"],
      "*": ["node_modules", "packages"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist"]
}
